---
import { Image } from "astro:assets";

import CEOImage from "@assets/images/ceo.png";
---
<section class="full-span">
    <div class="hero">
   <div class="hero-content">
    <h1>Empowering Your Business Growth</h1>
    <p>
      Discover tailored strategies and expert insights to take your business to
      the next level. Let us help you navigate challenges and achieve
      sustainable success.
    </p>
    <a href="#0" class="button">Book a Meeting</a>
  </div>
  <Image src={CEOImage} alt="CEO" />

  </div>
</section>
<style>
  /* Styles her */
  @layer components {
section{
   background-color: var(--color-primary-03);
    .hero {
        display: grid;
        object-fit: cover;
        grid-template-columns: subgrid;
        grid-column: full;
        gap: 0;
     
      .hero-content{
        grid-column: 2 / span 1;
        display: flex;
        flex-direction: column;
        padding-block: 80px;
        padding-right: 20px;
       
        gap: 10px;
          align-items: flex-start;
                justify-items: flex-start;
        >*{  
             color: var(--color-secondary-02);
            }
            .button{
                background-color: var(--color-secondary-02);
                color: var(--color-primary-03);
              
            }
      }
      :last-child{
        grid-column:middle/full-end ;
      }
    
    }
    }
  }
</style>
