---
import { Image } from "astro:assets";
const {button, heading, image} = Astro.props;
import HeroBgWrapper from "./helpers/HeroBgWrapper.astro";
---

<HeroBgWrapper imagePath="test.png" class="hero-bg full-span" >
<section class="hero">
   <div class="hero-content">
    <div>
      <h5 class="button">{button}</h5>
    </div>
   <h1>{heading}</h1>
  </div>
</section>
</HeroBgWrapper>


<style>
  /* Styles her */
  @layer components {
    .hero {
        display: grid;
        object-fit: cover;
        grid-template-columns: 2fr 1fr;
      .hero-content{
        display: flex;
        flex-direction: column;
        align-items: start;
        background-color:rgba(255, 255, 255, 0.85);
         backdrop-filter: blur(5.5px);
         gap: 21px;
         border-radius: 29px;
        padding: 48px 60px 58px 60px;
        margin-block: 100px;

            h5{
              background-color: var(--color-primary-01);
              padding:  0 15px;
                }
      }
    }
  }
</style>
