---
import { Image } from "astro:assets";
import Services from "./Services.astro";
import CEOImage from "@assets/images/ceo.png";
import HeroBgWrapper from "./helpers/HeroBgWrapper.astro";
---

<HeroBgWrapper imagePath="test.png" class="hero-bg full-span" >
<section class="hero">
   <div class="hero-content">
    <h1>Empowering Your Business Growth</h1>
    <p>
      Discover tailored strategies and expert insights to take your business to
      the next level. Let us help you navigate challenges and achieve
      sustainable success.
    </p>
    <a href="#0">Book a Meeting</a>
  </div>
  <Image src={CEOImage} alt="CEO" />

  
</section>
</HeroBgWrapper>
<Services />

<style>
  /* Styles her */
  @layer components {
    .hero {
        display: grid;
        object-fit: cover;
        grid-template-columns: repeat(2, 1fr);
      .hero-content{
        display: flex;
        flex-direction: column;
        background-color: white;
        padding: 10px;
        margin: 20px;
      }
    }
  }
</style>
