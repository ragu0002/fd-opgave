      aspect-ratio: 1/1;
      width: 60px;
        height: auto;
      display: flex;
      align-items: center;
      justify-content: center;
      >*{
        color: #DEAA27;
      }
        }
        
        
    }
    >:nth-child(2){
        >:first-child{
            background-color: #A4EDA4;
            >*{
        color: #4EAF4E;
      }
    }
}

    >:nth-child(3){
        >:first-child{
            background-color: #EAEAEA;
            >*{
        color: #181818;
      }
    }
}
}
.img_box{
    display:grid;
    grid-template-columns: 1fr 1fr;
    gap:20px;
    padding: 40px;
