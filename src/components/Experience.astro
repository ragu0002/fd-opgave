---
//@ts-nocheck
import experience from "@data/experience.json";
console.log(experience);
---
<section class="full-span">
<div>
<div>
  <h5>experience</h5>
<h2>{experience.heading}</h2>
<p>{experience.subheading}</p>
</div>
<div class="stats">
     {
    experience.stats.map((service) => (
      <div class="stat_container">
        <div class="stat" style={{ '--percent': `${service.value}` }}>
        </div>
             <p>{service.label}</p>
      </div>
    ))
  }
</div>
</div>
</section>
<style>
  @layer components {

section{
   background-color: var(--color-primary-01);
   padding-block: 10vh;
  >*{
    display: grid;
    grid-template-columns: auto 2fr;
   width: min( 100% - 1rem);
  gap: 90px;
   }
   p{
    color: var(--color-primary-03);
   }
}
 .stats {
    text-align: center;
    grid-column: 2/ span 2;
  display: flex;
  gap: 1rem;
  justify-content: space-between;
  >*{
    display: flex;
    flex-direction: column;
    gap: 15px;
  }
}

.stat {
    display: grid;
       grid-column: subgrid;
      
  container: stat/ inline-size;
  --actualPercent: calc(var(--percent)*1%);
  --border-width: 5px;
  aspect-ratio: 1;
  width: 150px;
  border-radius: calc(Infinity * 1px);
  border: var(--border-width) solid transparent;
  background-color: var(--color-primary-01);
  background:
    conic-gradient(var(--color-primary-01) 0 0) padding-box,
    conic-gradient(var(--color-secondary-02) var(--actualPercent), var(--color-primary-03-02) 0) border-box;
  
  counter-reset:c var(--percent);
  
  &::before,
  &::after {
    grid-area: 1 / 1;
   
  }
  
  &::after {
   
    content: counter(c, decimal-leading-zero)"%";
    place-self:center;
    font-size: 30cqw;
  }
  
  &::before {
    content: '';
    aspect-ratio: 1;
    border-radius: 99px;
    width: 20px;
    background: var(--color-primary-03);
     offset-path:border-box;
    offset-distance: var(--actualPercent);
  offset-anchor: 50% calc(50%-var(--border-width)/2);
  }
}

  }


</style>